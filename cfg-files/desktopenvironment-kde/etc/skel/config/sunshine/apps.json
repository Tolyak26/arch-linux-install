{
    "apps": [
        {
            "auto-detach": true,
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "",
            "name": "Desktop (Steam Deck)",
            "prep-cmd": [
                {
                    "do": "kscreen-doctor output.DP-3.mode.1280x800@60 output.DP-3.scale.1.25",
                    "undo": "kscreen-doctor output.DP-3.mode.1920x1080@165 output.DP-3.scale.1"
                }
            ],
            "wait-all": true
        },
        {
            "auto-detach": true,
            "detached": [
                "setsid steam steam://open/bigpicture"
            ],
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "",
            "name": "Steam Big Picture (Steam Deck)",
            "prep-cmd": [
                {
                    "do": "kscreen-doctor output.DP-3.mode.1280x800@60 output.DP-3.scale.1.25",
                    "undo": "kscreen-doctor output.DP-3.mode.1920x1080@165 output.DP-3.scale.1"
                },
                {
                    "do": "",
                    "undo": "setsid steam steam://close/bigpicture"
                }
            ],
            "wait-all": true
        },
        {
            "auto-detach": true,
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "",
            "name": "Desktop (TV)",
            "prep-cmd": [
                {
                    "do": "kscreen-doctor output.DP-3.mode.1920x1080@60 output.DP-3.scale.1.25",
                    "undo": "kscreen-doctor output.DP-3.mode.1920x1080@165 output.DP-3.scale.1"
                }
            ],
            "wait-all": true
        },
        {
            "auto-detach": true,
            "detached": [
                "setsid steam steam://open/bigpicture"
            ],
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "",
            "name": "Steam Big Picture (TV)",
            "prep-cmd": [
                {
                    "do": "kscreen-doctor output.DP-3.mode.1920x1080@60 output.DP-3.scale.1.25",
                    "undo": "kscreen-doctor output.DP-3.mode.1920x1080@165 output.DP-3.scale.1"
                },
                {
                    "do": "",
                    "undo": "setsid steam steam://close/bigpicture"
                }
            ],
            "wait-all": true
        }
    ],
    "env": {
        "PATH": "$(PATH):$(HOME)/.local/bin"
    }
}
